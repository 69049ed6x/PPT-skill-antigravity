<?xml version="1.0" encoding="utf-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="OnAddinLoad">
  <ribbon startFromScratch="false">
    <tabs>
      <tab id="AIStyleTab" label="AI样式助手">
        <group id="AIStyleGroup" label="智能优化">
          <!-- 打开样式助手按钮 - 打开 TaskPane -->
          <button 
            id="btnOpenStyler" 
            label="打开面板" 
            size="large"
            onAction="OnOpenTaskPane"
            screentip="打开 AI 样式助手"
            supertip="在右侧打开 AI 样式助手操作面板" />
          
          <!-- 快速润色按钮 -->
          <button 
            id="btnQuickPolish" 
            label="快速润色" 
            size="normal"
            onAction="OnQuickPolish"
            screentip="快速润色"
            supertip="快速优化选中文本的语气和格式" />
          
          <!-- 设置按钮 -->
          <button 
            id="btnSettings" 
            label="设置" 
            size="normal"
            onAction="OnSettings"
            screentip="设置"
            supertip="配置智谱 API Key 和后端地址" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>
